@using DrivingSchool.Data

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Check" Class="mr-3 mb-n1"/>
            Вы уверены?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            Вы будете записаны на занятие
            <MudTextField Value="@Lesson.Text" Label="Учитель" ReadOnly="true"/>
            <MudTextField Value="@Lesson.TimeStart.ToString("g")" Label="Время начала занятия" ReadOnly="true"/>
            <MudTextField Value="@Lesson.TimeEnd.ToString("g")" Label="Время окончания занятия" ReadOnly="true"/>
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Нет</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="DeleteServer">Да</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DisplayLesson Lesson { get; set; } = null!;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteServer()
    {
        MudDialog.Close();
    }

}